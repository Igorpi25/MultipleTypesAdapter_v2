<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/drawable_item"
    android:gravity="center_vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/item_bitcoin_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:fontFamily="sans-serif"
        android:text="Name"
        android:textColor="@color/color_selector_font"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_bitcoin_icon"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_item_more" />

    <TextView
        android:id="@+id/item_bitcoin_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_bitcoin_name"
        android:fontFamily="sans-serif-light"
        android:text="Symbol"
        android:textColor="@color/color_selector_font" />

    <TextView
        android:id="@+id/item_bitcoin_website_slug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/item_bitcoin_icon"
        android:fontFamily="sans-serif-light"
        android:text="Slug"
        android:textColor="@color/color_gray"
        android:textStyle="bold" />

</RelativeLayout>
