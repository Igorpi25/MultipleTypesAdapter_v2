<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/drawable_item"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/details_item_link_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_no_icon" />

    <TextView
        android:id="@+id/details_item_link_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/details_item_link_icon"
        android:fontFamily="sans-serif"
        android:text="Name"
        android:textColor="@color/color_selector_font" />
    
    <TextView
        android:id="@+id/details_item_link_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/details_item_link_name"
        android:fontFamily="sans-serif-light"
        android:maxHeight="30dp"
        android:paddingLeft="5dp"
        android:text="Status"
        android:textColor="@color/color_selector_font"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/details_item_link_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:maxHeight="30dp"
            android:paddingRight="5dp"
            android:text="Label"
            android:textColor="@color/color_selector_font"
            android:visibility="visible" />

        <Button
            android:id="@+id/details_item_link_button"
            style="@style/style_button_dialog"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:fontFamily="sans-serif-light"
            android:text="Button"
            android:textSize="12sp" />
    </LinearLayout>

</RelativeLayout>
