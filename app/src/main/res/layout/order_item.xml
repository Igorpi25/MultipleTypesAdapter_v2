<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:clickable="true"
				android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="0dp">

				<RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="60dp"
				    android:background="#fff"
				    android:paddingBottom="5dp"
				    android:paddingLeft="5dp"
				    android:paddingRight="5dp"
				    android:paddingTop="5dp" >
				
				    <ImageView
				        android:id="@+id/order_item_icon"
				        android:layout_width="40dp"
				        android:layout_height="40dp"
				        android:layout_alignParentLeft="true"
				        android:layout_alignParentTop="true"
				        android:layout_marginRight="10dp"
				        android:scaleType="center"
				        android:src="@drawable/ic_no_icon" />
				
				    <TextView
				        android:id="@+id/order_item_title"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignTop="@+id/order_item_icon"
				        android:layout_toLeftOf="@+id/order_item_total"
				        android:layout_toRightOf="@+id/order_item_icon"
				        android:ellipsize="end"
				        android:gravity="top"
				        android:maxLines="2"
				        android:minLines="2"
				        android:text="БЕЛЫЙ хлеб черногорский"
				        android:textColor="@color/color_text_black"
				        android:textSize="12sp"
				        android:typeface="normal" />
				
				    <TextView
				        android:id="@+id/order_item_total"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentRight="true"
				        android:layout_alignParentTop="true"
				        android:fontFamily="Roboto-Medium"
				        android:gravity="right"
				        android:text="3680 р."
				        android:textColor="@color/color_text_black"
				        android:textSize="16sp"
				        android:textStyle="bold"
				        android:typeface="normal" />
				    
					<TextView
					    android:id="@+id/order_item_unit"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentRight="true"
					    android:layout_below="@+id/order_item_title"
					    android:fontFamily="Roboto-Medium"
					    android:text="упк."
					    android:textColor="@color/color_green"
					    android:textSize="10sp"
					    android:typeface="normal" />
				
				    <TextView
				        android:id="@+id/order_item_count"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignBaseline="@+id/order_item_unit"
				        android:layout_marginRight="5dp"
				        android:layout_toLeftOf="@+id/order_item_unit"
				        android:fontFamily="Roboto-Medium"
				        android:text="16"
				        android:textColor="@color/color_green"
				        android:textSize="15sp"
				        android:textStyle="bold"
				        android:typeface="normal" />
				
				    <TextView
				        android:id="@+id/order_item_price"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignBottom="@+id/order_item_unit"
				        android:layout_marginRight="24dp"
				        android:layout_toLeftOf="@+id/order_item_total"
				        android:fontFamily="sans-serif-light"
				        android:text="Цена: 230 р."
				        android:textColor="@color/color_text_black"
				        android:textSize="12sp"
				        android:typeface="normal" />
				
				</RelativeLayout>
</android.support.v7.widget.CardView>
