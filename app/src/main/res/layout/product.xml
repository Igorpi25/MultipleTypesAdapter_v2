<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:clickable="true"
				android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp">
    
		<RelativeLayout
		    style="@style/Widget.CardItem"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content">
		
		    <ImageView
		        android:id="@+id/product_icon"
		        android:layout_width="90dp"
		        android:layout_height="80dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginRight="16dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_no_icon" />
		
		    <TextView
		        android:id="@+id/product_title"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/product_icon"
		        android:layout_toRightOf="@+id/product_icon"
		        android:ellipsize="end"
            	android:textAppearance="?android:attr/textAppearanceLarge"
		        android:singleLine="true"
		        android:text="БЕЛЫЙ хлеб зерновой-пшеничный"
		        android:textColor="@color/color_text_black"
		        android:textSize="14sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/product_text"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/product_title"
		        android:layout_marginTop="6dp"
		        android:layout_toRightOf="@+id/product_icon"
		        android:ellipsize="end"
		        android:gravity="fill|top"
		        android:maxLines="3"
		        android:text="@string/nhz_text"
		        android:textColor="@color/color_text_black"
		        android:textSize="12sp"
		        android:typeface="normal" />
		
		    <TextView
		        android:id="@+id/product_price"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/product_text"
		        android:layout_marginTop="6dp"
		        android:layout_toRightOf="@+id/product_icon"
		        android:background="@color/color_gray_medial"
		        android:paddingLeft="6dp"
		        android:paddingRight="6dp"
		        android:paddingTop="3dp"
		        android:paddingBottom="3dp"
		        android:text="230 р."
		        android:textColor="@color/color_text_white"
		        android:textSize="16sp"
		        android:typeface="normal"  />
		
		    <Button
		        android:id="@+id/product_button_order"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/product_text"
		        android:padding="5dp"
		        android:text="Заказать"
		        android:theme="@style/SpecialButton" />
		
		</RelativeLayout>

</android.support.v7.widget.CardView>
