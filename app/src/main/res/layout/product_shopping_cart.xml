<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
				android:clickable="true"
				android:foreground="?android:attr/selectableItemBackground"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="3dp">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="15dp" >
		        
   	<RelativeLayout
   	    android:layout_width="fill_parent"
   	    android:layout_height="wrap_content"
   	    android:paddingLeft="16dp"
   	    android:paddingRight="16dp"
   	    android:paddingTop="16dp" 
   	    android:paddingBottom="5dp">
		
		    <ImageView
		        android:id="@+id/product_shopping_cart_icon"
		        android:layout_width="90dp"
		        android:layout_height="80dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:layout_marginRight="16dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_no_icon" />
		
		    <TextView
		        android:id="@+id/product_shopping_cart_title_x"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/product_shopping_cart_icon"
		        android:layout_toRightOf="@+id/product_shopping_cart_icon"
            	android:textAppearance="?android:attr/textAppearanceLarge"
		        android:singleLine="true"
		        android:text="X"
		        android:textColor="@color/color_text_black"
		        android:textSize="14sp"
		        android:textStyle="bold" />
		    
		    <TextView
		        android:id="@+id/product_shopping_cart_title_count"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/product_shopping_cart_icon"
		        android:layout_toRightOf="@+id/product_shopping_cart_title_x"
            	android:textAppearance="?android:attr/textAppearanceLarge"
		        android:singleLine="true"
		        android:text="0"
		        android:textColor="@color/color_text_black"
		        android:textSize="14sp"
		        android:textStyle="bold" />
		    
		    <TextView
		        android:id="@+id/product_shopping_cart_title"
            	android:fontFamily="sans-serif-light"
            	android:paddingLeft="5dp"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignTop="@+id/product_shopping_cart_icon"
		        android:layout_toRightOf="@+id/product_shopping_cart_title_count"
		        android:ellipsize="end"
            	android:textAppearance="?android:attr/textAppearanceLarge"
		        android:singleLine="true"
		        android:text="БЕЛЫЙ хлеб зерновой-пшеничный"
		        android:textColor="@color/color_text_black"
		        android:textSize="14sp"
		        android:textStyle="bold" />
		
		    <TextView
		        android:id="@+id/product_shopping_cart_text"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@+id/product_shopping_cart_title"
		        android:layout_marginTop="6dp"
		        android:layout_toRightOf="@+id/product_shopping_cart_icon"
		        android:ellipsize="end"
		        android:gravity="fill|top"
		        android:maxLines="3"
		        android:text="@string/nhz_text"
		        android:textColor="@color/color_text_black"
		        android:textSize="12sp"
		        android:typeface="normal" />
		
		    <TextView
		        android:id="@+id/product_shopping_cart_price"
            	android:fontFamily="sans-serif-light"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_below="@+id/product_shopping_cart_text"
		        android:layout_marginTop="6dp"
		        android:layout_toRightOf="@+id/product_shopping_cart_icon"
		        android:background="@color/color_gray_medial"
		        android:paddingLeft="6dp"
		        android:paddingRight="6dp"
		        android:paddingTop="3dp"
		        android:paddingBottom="3dp"
		        android:text="230 р."
		        android:textColor="@color/color_text_white"
		        android:textSize="16sp"
		        android:typeface="normal"  />
		
		    
		    <TextView
		         android:id="@+id/product_shopping_cart_button_remove"
		         android:fontFamily="sans-serif-light"
		         android:layout_marginTop="8dp"
			     android:textColor="@color/color_focused"
			     android:textSize="12sp"
			     android:typeface="normal"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"  
		         android:layout_alignParentRight="true" 
		         android:layout_below="@+id/product_shopping_cart_text"
		         android:clickable="true"    
		         android:text="@string/product_shopping_cart_button_remove" />
		    
		    <TextView
		         android:id="@+id/product_shopping_cart_button_slash"
		         android:layout_marginTop="8dp"
		         android:layout_marginLeft="5dp"
		         android:fontFamily="sans-serif-light"
			     android:textColor="@color/color_focused"
			     android:textSize="12sp"
			     android:typeface="normal"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"  
		         android:layout_below="@+id/product_shopping_cart_text"
		         android:layout_toLeftOf="@+id/product_shopping_cart_button_remove"
		         android:text="/" />
		    
		    <TextView
		         android:id="@+id/product_shopping_cart_button_edit"
		         android:layout_marginTop="8dp"
		         android:layout_marginLeft="5dp"
		         android:fontFamily="sans-serif-light"
			     android:textColor="@color/color_focused"
			     android:textSize="12sp"
			     android:typeface="normal"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"   
		         android:layout_below="@+id/product_shopping_cart_text"
		         android:layout_toLeftOf="@+id/product_shopping_cart_button_slash"
		         android:clickable="true"    
		         android:text="@string/product_shopping_cart_button_edit" />
		    
		    		    
		    
		
	</RelativeLayout>

    

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
		    
        <TextView
            android:id="@+id/product_shopping_cart_count_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right"
            android:text="Количество:"
            android:textColor="@color/color_text_black"
            android:textSize="14sp"
            android:typeface="normal" />
        
        <TextView
            android:id="@+id/product_shopping_cart_count_value"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/product_icon"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:gravity="right"
            android:text="17"
            android:textColor="@color/color_text_black"
            android:textSize="14sp"
            android:typeface="normal" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingLeft="15dp"
        android:paddingRight="15dp" >
		    
        <TextView
            android:id="@+id/product_shopping_cart_amount_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:gravity="right"
            android:text="Сумма:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/color_text_black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:gravity="right" >

            <TextView
                android:id="@+id/product_shopping_cart_amount_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:maxLines="3"
                android:paddingLeft="3dp"
                android:text="345"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_text_black"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/product_shopping_cart_amount_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="right"
                android:paddingLeft="3dp"
                android:text="Руб."
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/color_text_black"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="normal" />

        </LinearLayout>
        
    </LinearLayout>
		
</LinearLayout>
</android.support.v7.widget.CardView>
