<resources>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="Widget.CardItem" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:orientation">vertical</item>
    </style>
    
    <style name="SpecialButton" parent="Widget.AppCompat.Button.Colored">
	  <item name="colorButtonNormal">#0c660c</item>
	  <item name="android:textColorPrimary">#fff</item>
	</style>
    
    <style name="style_button_dialog" parent="@android:style/Widget.Button">
    	<item name="android:background">@drawable/drawable_button_dialog_normal</item>
        <item name="android:width">@dimen/widget_width_medial</item>
        <item name="android:height">@dimen/widget_height</item>
        <item name="android:textColor">@color/color_selector_font</item>    
    </style>
        
    <style name="style_edittext_dialog" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/drawable_edittext</item>
        <item name="android:textColorHint">@color/color_gray_light</item>
        <item name="android:padding">@dimen/widget_edittext_padding</item>
        <item name="android:width">@dimen/widget_width_long</item>
        <item name="android:height">@dimen/widget_height</item>

    </style>
    
    

</resources>
